{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2020", "dom"]
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/native-variants/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist", "docs", ".husky", "run"]
}
